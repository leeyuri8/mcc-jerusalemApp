<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_News"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_margin="10dp"
        android:backgroundTint="#0020D0"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/item_News_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clothes"
            android:lines="2"
            android:textSize="15sp"
            android:padding="10dp"
            android:autoSizeMaxTextSize="15sp"
            android:textColor="@color/white"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/item_News_Image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gaza1"/>
            <ImageView
                android:id="@+id/item_News_favorit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/favorit"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_News_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="News"
                    android:maxLines="8"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:autoSizeMaxTextSize="15sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/item_News_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05/16/2000    02:00"
                    android:lines="1"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:autoSizeMaxTextSize="15sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>




    </androidx.cardview.widget.CardView>

</LinearLayout>